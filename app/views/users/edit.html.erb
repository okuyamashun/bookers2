<div class="container" >

    <div class="row">
    	<% if flash[:notice] %>
		      <div class="flash">
		        <%= flash[:notice] %>
		      </div>
		<% end %>

		<h2>User info</h2>
		<%= form_for(@user) do |f| %>

		<h4> Name </h4>
			<%= f.text_field :username, class: "name" %>

		<h4> Image </h4>
		<%= f.attachment_field :profile_image, class: "user_image" %>
		<h4>Introduction</h4>
			<%= f.text_area :introduction, class: "introduction" %>

			<br><%= f.submit 'Update User' %></br>

		<% end %>
</div>