        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <br></br>

                <table class="table table-striped">
                      <tbody><tr></tr> 
                      <tr>
                    	  <th>name</th>
                    	  <th>
                    	  	<%= user.username %>
                    	  </th>
                      </tr>
                      <tr>
                    	  <th>introduction</th>
                    	  <th>
                    	  	<%= user.introduction%>
                    	  </th>
                      </tr>
                	   </tbody>
                </table>

                <%= link_to edit_user_path(current_user.id), class: "edit_user_#{current_user.id}" do %>
                <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_1606"></i>
                <% end %>

                <br></br>

        <h2>New book</h2>
        	<%= form_for(book) do |f| %>

        	<h4>Title</h4>
        	<%= f.text_field :title, class: "col-xs-12 book_title" %>

        	<h4>Opinion</h4>
        	<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
            <br></br>

        	<br><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></br>
        <% end %>
   


