<div class="container" >

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
    
    <div class="row" >

      <div class="col-xs-3">
<%= render 'users/list', book: @book, user: @user %>

</div>

 <div class="col-xs-9">
	<h2> Books </h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
				</td>
				<td>
					<%= link_to book.title, book_path(book),class: "book_#{book.id}" %>
				</td>
				<td>
					<%= book.opinion %>
				</td>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

